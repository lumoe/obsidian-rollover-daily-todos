{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "importHelpers": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "lib": ["dom", "ES2022"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "target": "ESNext",
        "typeRoots": [
            "./node_modules/@types",
            "./typings",
            "./node_modules/obsidian",
            "./node_modules/@codemirror/state/dist"
        ]
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts", "./fophidian.ts"]
}
